<h2 class='form-group'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group devise-form">
    <%= f.email_field :email, class: 'form-control', placeholder: "Enter Email", autofocus: true %>
  </div>

  <div class="field form-group devise-form">
    <%= f.password_field :password, class: 'form-control', placeholder: "Enter Password", autocomplete: "off" %>
  </div>

  <div class="field form-group devise-form">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password", autocomplete: "off" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
