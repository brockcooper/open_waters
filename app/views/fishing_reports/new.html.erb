<div class='fishing-report-form'>
  <%= form_for ([current_user, setup_fishing_report(@fishing_report)]) do |f| %>
    <h2>New Report</h2>
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: "Title of Report" %>
    </div>
    <div class="form-group">
      <%= f.date_field :date, class: 'form-control', placeholder: "Date Fished" %>
    </div>
    <div class="form-group">
      <%= f.text_field :location, class: 'form-control', placeholder: "Geographic Location" %>
    </div>
    <div class="form-group">
      <% body_of_water_options = ['River', 'Lake', 'Ocean', 'Stream', 'Creek', 'Sea', 'Bay', 'Ocean Shore'] %>
      <%= f.select :body_of_water, body_of_water_options, {}, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.text_area :story, rows: 8, class: 'form-control', placeholder: "Story" %>
    </div>

    <h3>Conditions</h3>
    <div class="form-group">
      <% weather_options = ['Sunny', 'Partly Cloudy', 'Overcast', 'Light Rain', 'Heavy Rain', 'Snow', 'Foggy'] %>
      <%= f.select :weather, weather_options, {}, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.text_field :air_temp, class: 'form-control', placeholder: "Air Temperature °F" %>
    </div>
    <div class="form-group">
      <%= f.text_field :water_flow, class: 'form-control', placeholder: "Water Flow" %>
    </div>
    <div class="form-group">
      <%= f.text_field :visibility, class: 'form-control', placeholder: "Water Visibility" %>
    </div>
    <div class="form-group">
      <%= f.text_field :water_temp, class: 'form-control', placeholder: "Water Temperature °F" %>
    </div>

    <h3>Hatches</h3>
    <%= f.fields_for :hatches do |ff| %>
      <div class="form-group">
        <%= ff.text_field :insect_type, class: 'form-control', placeholder: "Insect Species" %>
      </div>
      <div class="form-group">
        <%= ff.text_field :time_of_day, class: 'form-control', placeholder: "Time of Day" %>
      </div>
      <div class="form-group">
        <%= ff.text_field :description, class: 'form-control', placeholder: "Description" %>
      </div>
    <% end %>

    <h3>Equipment</h3>
    <div class="form-group">
      <%= f.text_field :rod_used, class: 'form-control', placeholder: "Rod Used" %>
    </div>
    <div class="form-group">
      <%= f.text_field :line_used, class: 'form-control', placeholder: "Line Used" %>
    </div>
    <div class="form-group">
      <%= f.text_field :leader_used, class: 'form-control', placeholder: "Leader Used" %>
    </div>
    <div class="form-group">
      <%= f.text_field :tippet_used, class: 'form-control', placeholder: "Tippet Used" %>
    </div>

    <h3>Flies Used</h3>
    <%= f.fields_for :flies do |ff| %>
      <div class="form-group">
        <%= ff.text_field :name, class: 'form-control', placeholder: "Fly Name" %>
      </div>
      <div class="form-group">
        <% fly_types = ['Dry', 'Nymph', 'Streamer'] %>
        <%= ff.select :fly_type, fly_types, {}, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= ff.text_field :size, class: 'form-control', placeholder: "Size" %>
      </div>
      <div class="form-group">
        <%= ff.text_field :notes, class: 'form-control', placeholder: "Notes" %>
      </div>
      <div>
        <%= label_tag :tied_yourself, "Tied Self" %>
        <%= check_box_tag(:tied_yourself, true, false, class: "checkbox") %>
      </div>
      <% end %>

    <h3>Fish Caught</h3>
    <%= f.fields_for :fish do |ff| %>
      <div class="form-group">
        <%= ff.text_field :species, class: 'form-control', placeholder: "Fish Species" %>
      </div>
      <div class="form-group">
        <%= ff.text_field :length, class: 'form-control', placeholder: "Length" %>
      </div>
      <div class="form-group">
        <%= ff.text_field :gps, class: 'form-control', placeholder: "Image URL" %>
      </div>
    <% end %>

    <h3>Advice</h3>
    <div class="form-group">
      <%= f.text_field :best_time_of_day, class: 'form-control', placeholder: "Best Time of Day to Fish" %>
    </div>
    <div class="form-group">
      <%= f.text_field :best_water_type, class: 'form-control', placeholder: "Best Water Feature to Fish" %>
    </div>
    <div class="form-group">
      <%= f.text_area :advice, rows: 8, class: 'form-control', placeholder: "Advice" %>
    </div>
    <div class="form-group">
      <%= f.text_area :other_notes, rows: 8, class: 'form-control', placeholder: "Other Notes" %>
    </div>

    <%= f.submit "Save", class: 'btn btn-success' %>
  <% end %>
</div>