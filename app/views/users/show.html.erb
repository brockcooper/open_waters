<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <div class='stats'>
    <div class='row'>
        <div class='stat col-md-4'>Fish Caught: <%= @user.fish.count %></div>
        <div class='stat col-md-4'>Days Fished: <%= @user.fishing_reports.count %></div>
        <div class='stat col-md-4'>Followers: 54</div>
    </div>
    </div>
  <% if current_user = @user %>
    <div class='about-me'>
      <h1>About Me <%= link_to 'Edit', edit_user_path(current_user), class: 'edit-link' %></h1>
      <%= @user.about_me %>
    </div>
  <% end %>
  <div class="col-md-8">
    <% if @user.fishing_reports.any? %>
      <h3>Fishing Reports</h3>
      <ol class="fishing_reports">
        <%= render @fishing_reports %>
      </ol>
    <% end %>
  </div>
</div>